rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin (optional)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // ==================== ITEMS ====================
    match /items/{itemId} {
      // Anyone can read items (public lost & found)
      allow read: if true;
      
      // Only authenticated users can create items
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Only item owner can update/delete
      allow update, delete: if isOwner(resource.data.userId);
      
      // Status history subcollection
      match /status_history/{historyId} {
        allow read: if true;
        allow write: if isOwner(get(/databases/$(database)/documents/items/$(itemId)).data.userId);
      }
    }
    
    // ==================== USERS ====================
    match /users/{userId} {
      // Users can read their own profile, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can only write to their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // No self-deletion
      
      // Karma history subcollection
      match /karma_history/{karmaId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // ==================== CHATS ====================
    match /chats/{chatId} {
      // Only participants can read/write
      allow read, write: if isAuthenticated() 
        && request.auth.uid in resource.data.participants;
      
      // Allow creating new chats if user is a participant
      allow create: if isAuthenticated() 
        && request.auth.uid in request.resource.data.participants;
      
      // Messages subcollection (if using subcollections)
      match /messages/{messageId} {
        allow read: if isAuthenticated() 
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if isAuthenticated() 
          && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
          && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if false; // Messages are immutable
      }
    }
    
    // ==================== MESSAGES (Top-level collection) ====================
    match /messages/{messageId} {
      // Allow reading messages if user is participant of the chat
      allow read: if isAuthenticated() 
        && request.auth.uid in get(/databases/$(database)/documents/chats/$(resource.data.chatId)).data.participants;
      
      // Allow creating messages if user is participant and is the sender
      allow create: if isAuthenticated() 
        && request.auth.uid in get(/databases/$(database)/documents/chats/$(request.resource.data.chatId)).data.participants
        && request.resource.data.senderId == request.auth.uid;
      
      // Messages are immutable
      allow update, delete: if false;
    }
    
    // ==================== NOTIFICATIONS ====================
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isOwner(resource.data.userId);
      
      // System can create, users can update (mark as read)
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // ==================== USER LOCATIONS ====================
    match /user_locations/{locationId} {
      // Only the user can read/write their location
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // ==================== ADMINS ====================
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only manual admin creation
    }
    
    // ==================== DEFAULT DENY ====================
    // Deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
